@model  List<PetGrooming.Models.Species>
@{
    ViewBag.Title = "Add";
}

<h2>Add a New Pet</h2>
<a href="/Pet/List">Back to List</a>
<form method="POST" action="/Pet/Add">
    <!-- TODO: format this nicely -->
    <div class="row">
        <div class="col-sm-1">Name:</div>
        <div class="col-sm-1">
            <input id="PetName" type="text" name="PetName" />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-1">Species:</div>
        <div class="col-sm-1">
            <select id="SpeciesID" type="text" name="SpeciesID">
                @{
                    //A rendering loop for presenting a list of species
                    //The pet should be one of these species
                    foreach (var species in Model)
                    {
                        <option value="@species.SpeciesID">@species.Name</option>

                    }
                }
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-1">Weight(Kg):</div>
        <div class="col-sm-1">
            <input id="PetWeight" type="text" name="PetWeight" />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-1">Color:</div>
        <div class="col-sm-1"><input id="PetColor" type="text" name="PetColor" /></div>
    </div>
    <div class="row">
        <div class="col-sm-1">Notes:</div>
        <div class="col-sm-1">
            <textarea id="PetNotes" name="PetNotes"></textarea>
        </div>
    </div>
    <div class="row col-sm-1">
        <input type="submit" value="Add Pet">
    </div>
</form>
